@model  List< MiBancoService.Domain.Models.TarjetaVM>

@{ ViewBag.Title = "Apartados"; }


<h2> Tarjetas </h2>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">

            <table class="table table-striped table-bordered table-hover" id="tablaMora">
                <thead>
                    <tr>
                        <th>Código Tarjeta</th>
                        <th>Numero </th>
                        <th>Banco </th>
                        <th>Tipo</th>
                        <th>Mes Vence</th>
                        <th>Año Vence</th>
                        <th>Estado</th>                        
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var datos in Model)
                        {
                    <tr>
                        <td>@datos.CodigoTarjeta</td>
                        <td>@datos.Numero </td>
                        <td>@datos.Banco</td>
                        <td>@datos.Tipo</td>
                        <td>@datos.MesVence </td>
                        <td>@datos.AnioVence</td>                        
                        <td>
                            <a class="btn btn-primary btnEditarTarjeta" href="javascript:" data-id="@datos.CodigoTarjeta" data-clienteid="@datos.CodigoTarjeta">
                                <span class="glyphicon glyphicon-usd"></span>  Editar
                            </a>
                        </td>
                    </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
